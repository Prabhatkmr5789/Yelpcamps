<% include ../partial/header %>
<form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
<div class="form-group">
    <input class="form-control" type="text" name="camp[name]" value="<%= campground.name %>">
</div>
<div class="form-group">
    <input class="form-control" type="text" name="camp[image]" value="<%= campground.image %>">
</div>
<div class="form-group">
    <textarea class="form-control" name="camp[descript]" value="<%= campground.descript %>"></textarea>
</div>
<div class="form-group">
    <button class="btn btn-primary btn-large">Update</button>
</div>
</form>

<% include ../partial/footer %>