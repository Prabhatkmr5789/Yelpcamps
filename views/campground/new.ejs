
<% include ../partial/header %>
 <form action="/campgrounds" method="POST" enctype="multipart/form-data">
     <div class="form-group">
         <input class="form-control" type="text" name="camp[name]" placeholder="Name">
     </div>
     <div class="form-group">
        <label for="image">Image</label>
         <input class="form-control" id="image" type="file" name="image" accept="image/*" required>
     </div>
     <div class="form-group">
         <textarea class="form-control" name="camp[descript]" placeholder="description"></textarea>
     </div>
     <div class="form-group">
         <button class="btn btn-primary btn-large">Submit !!</button>
     </div>
 </form>
 
 <% include ../partial/footer %>